{
  "name": "pi-home-gpio",
  "version": "0.0.0",
  "description": "GPIO interface for https://github.com/raspberry-pi-home/pi-home-raspberry",
  "author": {
    "name": "Gustavo Ingrassia",
    "email": "gustavo.ingrassia@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/raspberry-pi-home/pi-home-gpio",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raspberry-pi-home/pi-home-gpio.git"
  },
  "main": "lib/pi-home-gpio.min.js",
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "babel-loader": "^8.1.0",
    "eslint": "^7.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "release-it": "^13.6.1",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "onoff": "^6.0.0"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:js:development && npm run build:js:production",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "build:js:development": "webpack --mode=development",
    "build:js:production": "webpack --mode=production",
    "test": "jest --config=jest.config.json",
    "test:watch": "DEBUG=true npm run test --watch",
    "release": "release-it",
    "release:minor": "release-it minor",
    "release:major": "release-it major"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run type-check"
    }
  }
}
